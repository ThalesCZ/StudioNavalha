<script>
    document.addEventListener('DOMContentLoaded', function() {
        const serviceElements = document.querySelectorAll('.services-thumb');
        const modals = {
            corte: document.getElementById('modal-corte'),
            hidratacao: document.getElementById('modal-hidratacao'),
            barba: document.getElementById('modal-barba'),
            infantil: document.getElementById('modal-infantil')
        };
        const body = document.body;
        const navbarToggler = document.querySelector('.navbar-toggler.d-md-none');

        serviceElements.forEach(element => {
            element.addEventListener('click', function() {
                const service = this.getAttribute('data-service');
                const modal = modals[service];
                if (modal) {
                    modal.style.display = 'block';
                    body.classList.add('blur');
                    if (navbarToggler) {
                        navbarToggler.style.display = 'none';
                    }
                }
            });
        });

        const closeModalButtons = document.querySelectorAll('.close-modal');

        closeModalButtons.forEach(button => {
            button.addEventListener('click', function() {
                const modal = this.closest('.modal');
                modal.style.display = 'none';
                body.classList.remove('blur');
                if (navbarToggler) {
                    navbarToggler.style.display = 'block';
                }
            });
        });

        window.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
                body.classList.remove('blur');
                if (navbarToggler) {
                    navbarToggler.style.display = 'block';
                }
            }
        });
    });


</script>
  
